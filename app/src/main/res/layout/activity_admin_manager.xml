<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_admin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin: Manage Challenges"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edit_challenge_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Challenge title"
        android:background="@android:color/white"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/edit_challenge_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@android:color/white"
        android:padding="10dp"
        android:hint="Challenge description" />

    <Button
        android:id="@+id/btnViewChallenges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View User Challenges"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/button_add_challenge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add" />

        <Button
            android:id="@+id/button_update_challenge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update" />

        <Button
            android:id="@+id/button_delete_challenge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_existing_challenges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Existing Challenges"
        android:textStyle="bold"
        android:layout_marginTop="12dp" />

    <ListView
        android:id="@+id/list_admin_challenges"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:choiceMode="singleChoice" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Logout" />

</LinearLayout>